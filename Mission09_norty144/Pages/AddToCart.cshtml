@page
@model Mission09_norty144.Pages.AddToCartModel
@{
}

<h2>Your Cart</h2>

@*This code displays the current cart to the customer so they can see what books they have selected*@

<table class="table table-bordered table-striped">
    
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    @*Inn the code below there is a loop to iterate through all the books in the cart*@
    <tbody>
        @foreach(var i in Model.cart.Items)
            {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price.ToString("c")</td>
            <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>

            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId"/>
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </td>

        </tr>
            }
    </tbody>


    @*Here there is a calculation to get the total for the entire cart*@
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-controller="Checkout" asp-action="Checkout" >Checkout</a>
</div>


