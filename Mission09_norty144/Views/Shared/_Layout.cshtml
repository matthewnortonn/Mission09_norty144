<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white bg-secondary bg-gradient p-2">
        <div class="container-fluid">
            <div class="row">
                    <div class="navbar-brand ml-2">BOOK STORE</div>
                    <div class="col-6 text-right">
                        <vc:cart-summary />
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-1 p-1 bg-image" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');
            height: 100vh">
            <div id="categories" class="col-3">
                <vc:category></vc:category>
            </div>


            <div class="col-9">
                @RenderBody()
            </div>
        </div>
</body>
</html>
